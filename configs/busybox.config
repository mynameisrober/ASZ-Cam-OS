# BusyBox Configuration for ASZ Cam OS
# Minimal configuration optimized for camera operations

# Basic shell and utilities
CONFIG_SH_IS_ASH=y
CONFIG_BASH_IS_NONE=y
CONFIG_FEATURE_SH_STANDALONE=y

# Essential commands
CONFIG_LS=y
CONFIG_CP=y
CONFIG_MV=y
CONFIG_RM=y
CONFIG_MKDIR=y
CONFIG_RMDIR=y
CONFIG_TOUCH=y
CONFIG_CAT=y
CONFIG_HEAD=y
CONFIG_TAIL=y
CONFIG_WC=y
CONFIG_SORT=y
CONFIG_UNIQ=y
CONFIG_CUT=y
CONFIG_TR=y
CONFIG_SED=y
CONFIG_AWK=y
CONFIG_GREP=y
CONFIG_FIND=y

# File operations
CONFIG_CHMOD=y
CONFIG_CHOWN=y
CONFIG_CHGRP=y
CONFIG_STAT=y
CONFIG_TAR=y
CONFIG_GZIP=y
CONFIG_GUNZIP=y

# System utilities
CONFIG_PS=y
CONFIG_TOP=y
CONFIG_KILL=y
CONFIG_KILLALL=y
CONFIG_PIDOF=y
CONFIG_UPTIME=y
CONFIG_FREE=y
CONFIG_DF=y
CONFIG_DU=y
CONFIG_MOUNT=y
CONFIG_UMOUNT=y
CONFIG_SYNC=y

# Network utilities
CONFIG_PING=y
CONFIG_WGET=y
CONFIG_IFCONFIG=y
CONFIG_ROUTE=y

# Init system (will be replaced by systemd)
CONFIG_INIT=y
CONFIG_LINUXRC=y

# Disable unnecessary features
# CONFIG_FEATURE_MOUNT_NFS is not set
# CONFIG_FEATURE_HTTPD is not set
# CONFIG_TELNET is not set
# CONFIG_FTP is not set