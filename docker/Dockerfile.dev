# ASZ Cam OS - Development Environment Dockerfile
# For testing and developing ASZ Cam OS without Raspberry Pi hardware

FROM python:3.11-slim

# Set environment variables for development
ENV ASZ_DEV_MODE=true
ENV ASZ_SIMULATION_MODE=true  
ENV ASZ_MOCK_CAMERA=true
ENV ASZ_MOCK_RPI=true
ENV ASZ_WINDOWED_MODE=true
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Install system dependencies
RUN apt-get update && apt-get install -y \
    # Python development
    python3-dev \
    python3-pip \
    # GUI libraries (for PyQt6)
    libgl1-mesa-glx \
    libglib2.0-0 \
    libxcb-xinerama0 \
    libfontconfig1 \
    libxkbcommon-x11-0 \
    libdbus-1-3 \
    libegl1-mesa \
    libxrandr2 \
    libxss1 \
    libxcursor1 \
    libxcomposite1 \
    libasound2 \
    libxi6 \
    libxtst6 \
    # OpenCV dependencies
    libopencv-dev \
    libgstreamer1.0-0 \
    libgstreamer-plugins-base1.0-0 \
    # Development tools
    git \
    curl \
    build-essential \
    pkg-config \
    # Camera simulation
    v4l-utils \
    ffmpeg \
    # Cleanup
    && rm -rf /var/lib/apt/lists/*

# Create non-root user for development
RUN useradd -m -s /bin/bash developer
USER developer
WORKDIR /home/developer

# Set up Python path
ENV PATH="/home/developer/.local/bin:$PATH"

# Create application directory
WORKDIR /app

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --user --no-cache-dir --upgrade pip setuptools wheel
RUN pip install --user --no-cache-dir -r requirements.txt

# Install additional development dependencies
RUN pip install --user --no-cache-dir \
    pytest-cov \
    pytest-mock \
    pytest-asyncio \
    ipython \
    jupyter

# Copy source code
COPY --chown=developer:developer . .

# Create development directories
RUN mkdir -p logs dev_photos temp assets/mock_images

# Set PYTHONPATH
ENV PYTHONPATH="/app/src:$PYTHONPATH"

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python tests/test_dev_setup.py || exit 1

# Default command for development
CMD ["python", "scripts/run_dev_mode.py", "--test-env-only"]

# Labels for documentation
LABEL maintainer="ASZ Development Team"
LABEL description="ASZ Cam OS Development Environment"
LABEL version="1.0.0"