# ASZ Cam OS Kernel Configuration Fragment
# Optimizations and specific drivers for camera operations

# Camera and video support
CONFIG_MEDIA_SUPPORT=y
CONFIG_MEDIA_USB_SUPPORT=y
CONFIG_USB_VIDEO_CLASS=y
CONFIG_VIDEO_V4L2_SUBDEV_API=y
CONFIG_V4L_PLATFORM_DRIVERS=y
CONFIG_VIDEO_BCM2835_UNICAM=y

# I2C support for camera sensors
CONFIG_I2C=y
CONFIG_I2C_BCM2835=y

# SPI support
CONFIG_SPI=y
CONFIG_SPI_BCM2835=y

# GPIO support
CONFIG_GPIOLIB=y
CONFIG_GPIO_SYSFS=y

# Performance optimizations
CONFIG_PREEMPT=y
CONFIG_HIGH_RES_TIMERS=y
CONFIG_NO_HZ_IDLE=y
CONFIG_CGROUPS=y

# Memory management optimizations
CONFIG_ZRAM=y
CONFIG_ZSWAP=y
CONFIG_FRONTSWAP=y

# Disable unnecessary features for embedded system
# CONFIG_STAGING is not set
# CONFIG_DEBUG_KERNEL is not set
# CONFIG_IKCONFIG is not set

# Enable necessary filesystems
CONFIG_EXT4_FS=y
CONFIG_VFAT_FS=y
CONFIG_FAT_DEFAULT_UTF8=y

# Disable unnecessary network protocols
# CONFIG_WIRELESS is not set
# CONFIG_NETFILTER is not set

# Power management
CONFIG_CPU_FREQ=y
CONFIG_CPU_FREQ_DEFAULT_GOV_ONDEMAND=y